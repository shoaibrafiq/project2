<div class="container">
<ul class="nav navbar-right">
  <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Filter By Genre<span class="caret"></span></a>
<ul class="dropdown-menu" role="menu">
  <% Genre.all.each do |genre| %> <!-- Loop through and create list item for each genre-->
<li class="<%= 'active' if params[:genre] == genre.name %>">
  <%= link_to genre.name, films_path(genre: genre.name), class: "link" %>
</li>
<% end %>
</ul>
  </li>
</ul>
</div>
<h1 class="current-genre"><small><%= params[:genre] %></small></h1>

<% if @films.count == 0 %>
<h1><small>Films currently not available in this Genre</small></h1>
<% else %>
<div class="row">
<% @films.each do |film| %>
<!---looping through all the books defined in the index function in the films controller-->
<div class="col-md-3">
  <br>
<a class href="/films/<%= film.id %>">
  <%= image_tag film.film_img.url(:film_index), class: "film" %>
</a>
</div>
<% end %>
</div>

<% end %>

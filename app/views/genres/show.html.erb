<h2><%= @genre.name %></h2>
<p><%= @genre.description %></p>
<!-- if user is signed in and has added a genre the edit and delete links will show-->

<% if user_signed_in? %>


<% if @genre.user_id == current_user.id %>

<%= link_to "Edit", edit_genre_path(@genre), class:"btn btn-success" %>
<%= link_to "delete", genre_path(@genre), method: :delete, data: { confirm:"Are you sure you want to delete this genre?"}, class:"btn btn-danger" %>
<% end %>

<% end %>
<br><br>
<%= link_to "<Go Back", genres_path, class:"btn btn-default" %>
